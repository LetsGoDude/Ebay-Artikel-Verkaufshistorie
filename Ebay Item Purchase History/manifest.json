{
  "manifest_version": 2,
  "name": "Ebay Item Purchase History",
  "version": "1.3",
  "description": "Adds a button to the item page to display the order history on ebay.",
  
  "icons": {
    "48": "icon.png"
  },

  "content_scripts": [
    {
      "matches": [
        "*://*.ebay.com/*",
        "*://*.ebay.de/*",
        "*://*.ebay.co.uk/*",
        "*://*.ebay.com.au/*",
        "*://*.ebay.ca/*",
        "*://*.ebay.fr/*",
        "*://*.ebay.it/*",
        "*://*.ebay.es/*",
        "*://*.ebay.ie/*",
        "*://*.ebay.nl/*",
        "*://*.ebay.ch/*",
        "*://*.ebay.at/*",
        "*://*.ebay.be/*",
        "*://*.ebay.com.hk/*",
        "*://*.ebay.com.sg/*",
        "*://*.ebay.in/*",
        "*://*.ebay.ph/*",
        "*://*.ebay.my/*",
        "*://*.ebay.com.br/*",
        "*://*.ebay.pl/*",
        "*://*.ebay.com.mx/*",
        "*://*.ebay.co.th/*"
      ],
      "js": ["content.js"]
    }
  ]
}
